<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".shujia.ShujiaChangeActivity">
    <ImageView
        android:id="@+id/change_imageId"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_marginTop="50sp"
        android:src="@drawable/frxxc"
        android:layout_height="0sp"
        android:layout_weight="5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="50sp"
        android:orientation="vertical"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="书名："
                android:textSize="30sp"/>
            <EditText
                android:id="@+id/change_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="凡人修仙传"
                android:textSize="25sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="类型："
                android:textSize="30sp"/>
            <EditText
                android:id="@+id/change_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="修仙类"
                android:textSize="25sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="阅读记录："
                android:textSize="30sp"/>
            <EditText
                android:id="@+id/change_readCord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="第二章"
                android:textSize="25sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总字数："
                android:textSize="30sp"/>

            <EditText
                android:id="@+id/change_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="二十万字"
                android:textSize="25sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="作者："
                android:textSize="30sp"/>
            <EditText
                android:id="@+id/change_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="辰东"
                android:textSize="25sp"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/change_btn"
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_marginBottom="100sp"
        android:layout_marginHorizontal="30sp"
        android:layout_height="0sp"
        android:text="修改"/>
</LinearLayout>